{
  "name": "speedometer",
  "version": "1.2.4",
  "description": "measures various speeds of a container environment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p .",
    "start-build": "npm run build -- -w",
    "dev": "node --loader ts-node/esm src/index.ts",
    "pod-mach-init": "podman machine init --rootful --cpus 8 --memory 12288 --now",
    "print-image-size": "podman inspect -f \"{{ .Size }}\" speedometer-local",
    "build-local": "podman build -t speedometer-local .",
    "build-local-dev": "podman build -t speedometer-local-dev -f DevContainerfile .",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "run-local": "podman run -t speedometer-local",
    "run-local-dev": "podman run -t speedometer-local-dev",
    "work": "npm run build-local-dev && podman run -it -v $(pwd):/workdir speedometer-local-dev"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "node-fetch": "^3.3.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@tsconfig/esm": "^1.0.2",
    "@tsconfig/node-lts": "^18.12.1",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiceNode/speedometer.git"
  },
  "keywords": [
    "container",
    "performance",
    "docker",
    "speed",
    "internet",
    "fileio",
    "hardware",
    "test"
  ],
  "author": "jgresham",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NiceNode/speedometer/issues"
  },
  "homepage": "https://github.com/NiceNode/speedometer#readme"
}
